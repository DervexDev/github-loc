{
  "name": "github-loc",
  "displayName": "GitHub LOC",
  "version": "1.0.7",
  "author": "Dervex",
  "description": "See Lines Of Code of any GitHub repository in simple yet elegant way",
  "type": "module",
  "license": "Apache-2.0",
  "keywords": [
    "chrome-extension",
    "preact",
    "vite",
    "github",
    "loc"
  ],
  "engines": {
    "node": ">=14.18.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "fmt:write": "prettier --write '**/*.{tsx,ts,json,css,md}'",
    "fmt:check": "prettier --check '**/*.{tsx,ts,json,css,md}'",
    "zip": "npm run build && node src/zip.js"
  },
  "dependencies": {
    "preact": "^10.28.0"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.2.1",
    "@preact/preset-vite": "^2.10.1",
    "@types/chrome": "^0.1.32",
    "gulp": "^5.0.1",
    "gulp-zip": "^6.1.0",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "vite": "^4.5.14"
  }
}
